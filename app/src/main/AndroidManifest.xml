<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DynamicStringsSample"
        tools:targetApi="31">
        <activity
            android:name=".screen.FragmentActivity"
            android:exported="false" />
        <activity
            android:name=".screen.BackgroundViewActivity"
            android:exported="false" />
        <activity
            android:name=".screen.ComposeActivity"
            android:exported="false"
            android:label="@string/title_activity_compose"
            android:theme="@style/Theme.DynamicStringsSample" />
        <activity
            android:name=".screen.TestBitmapDrawableActivity"
            android:exported="false" />
        <activity
            android:name=".screen.ImageViewActivity"
            android:exported="false" />
        <activity
            android:name=".screen.ScaleTypeActivity"
            android:exported="false" />
        <activity
            android:name=".screen.RecyclerActivity"
            android:exported="false" />
        <activity
            android:name=".screen.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screen.SingleImageActivity" />
    </application>

</manifest>